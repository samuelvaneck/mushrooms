<%= form_with url: mushrooms_path, method: :get, format: :html do |f| %>
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Filters</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%= f.label :edible %></th>
        <td>
          <%= check_box_tag :edible %>
          <%= f.label :true %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :cap_shape %></th>
        <td><%= form_multiple_checkbox('CAP_SHAPE') %></td>
      </tr>
      <tr>
        <th><%= f.label :cap_surface %></th>
        <td><%= form_multiple_checkbox('CAP_SURFACE') %></td>
      </tr>
      <tr>
        <th><%= f.label :cap_color %></th>
        <td><%= form_multiple_checkbox('CAP_COLOR') %></td>
      </tr>
      <tr>
        <th><%= f.label :odor %></th>
        <td><%= form_multiple_checkbox('ODOR') %></td>
      </tr>
      <tr>
        <th><%= f.label :bruises %></th>
        <td>
          <%= check_box_tag :bruises %>
          <%= f.label :true %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :gill_attachment %></th>
        <td><%= form_multiple_checkbox('GILL_ATTACHMENT') %></td>
      </tr>
      <tr>
        <th><%= f.label :gill_spacing %></th>
        <td><%= form_multiple_checkbox('GILL_SPACING') %></td>
      </tr>
      <tr>
        <th><%= f.label :gill_size %></th>
        <td><%= form_multiple_checkbox('GILL_SIZE') %></td>
      </tr>
      <tr>
        <th><%= f.label :gill_color %></th>
        <td><%= form_multiple_checkbox('GILL_COLOR') %></td>
      </tr>
      <tr>
        <th><%= f.label :stalk_shape %></th>
        <td><%= form_multiple_checkbox('STALK_SHAPE') %></td>
      </tr>
      <tr>
        <th><%= f.label :stalk_root %></th>
        <td><%= form_multiple_checkbox('STALK_ROOT') %></td>
      </tr>
      <tr>
        <th><%= f.label :stalk_surface_above_ring %></th>
        <td><%= form_multiple_checkbox('STALK_SURFACE_ABOVE_RING') %></td>
      </tr>
      <tr>
        <th><%= f.label :stalk_surface_below_ring %></th>
        <td><%= form_multiple_checkbox('STALK_SURFACE_BELOW_RING') %></td>
