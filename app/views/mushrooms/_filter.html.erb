        <th><%= f.label :habitat %></th>
        <td><%= form_multiple_checkbox('HABITAT') %></td>
      </tr>
      <tr>
        <td colspan='2'>
          <%= f.submit 'Filter' %>
          <%= link_to 'Reset filter', mushrooms_path %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>