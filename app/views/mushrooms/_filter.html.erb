        <th><%= f.label :stalk_color_below_ring %></th>
        <td><%= form_multiple_checkbox('STALK_COLOR_BELOW_RING') %></td>
      </tr>
      <tr>
        <th><%= f.label :veil_type %></th>
        <td><%= form_multiple_checkbox('VEIL_TYPE') %></td>
      </tr><tr>
        <th><%= f.label :veil_color %></th>
        <td><%= form_multiple_checkbox('VEIL_COLOR') %></td>
      </tr>
      <tr>
        <th><%= f.label :ring_number %></th>
        <td><%= form_multiple_checkbox('RING_NUMBER') %></td>
      </tr>
      <tr>
        <th><%= f.label :spore_print_color_range %></th>
